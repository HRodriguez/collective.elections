<?xml version="1.0" ?>
<model xmlns="http://namespaces.plone.org/supermodel/schema"
       xmlns:form="http://namespaces.plone.org/supermodel/form">
 <schema>
  <field name="text" type="zope.schema.Text">
   <title>Text</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="chief_electoral_officer" type="zope.schema.Choice">
   <title>Chief electoral officer</title>
   <description></description>
   <required>True</required>
   <vocabulary>plone.principalsource.Users</vocabulary>
  </field>
  <field name="election_officials" type="zope.schema.TextLine">
   <title>Election officials</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="voting_start" type="zope.schema.Datetime">
   <title>Start of voting</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="voting_end" type="zope.schema.Datetime">
   <title>End of voting</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="nomination_acceptance" type="zope.schema.Datetime">
   <title>Acceptance of nomination</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="nomination_withdrawal" type="zope.schema.Datetime">
   <title>Withdrawal of nomination</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="voters_list_publication" type="zope.schema.Datetime">
   <title>Voters list publication</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="draft_candidates_list_publication" type="zope.schema.Datetime">
   <title>Draft candidates list publication</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="candidates_list_publication" type="zope.schema.Datetime">
   <title>Candidates list publication</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="election_results_publication" type="zope.schema.Datetime">
   <title>Election results publication</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="allow_electoral_slogan" type="zope.schema.Bool">
   <title>Allow electoral slogan</title>
   <description></description>
   <required>False</required>
  </field>
  <field name="allow_event" type="zope.schema.Bool">
   <title>Allow event</title>
   <default>True</default>
   <description></description>
   <required>True</required>
  </field>
  <field name="allow_url" type="zope.schema.Bool">
   <title>Allow url</title>
   <description></description>
   <required>False</required>
  </field>
  <field name="forum_url" type="zope.schema.URI">
   <title>Forum url</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="documents_url" type="zope.schema.URI">
   <title>Documents url</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="results_mode" type="zope.schema.TextLine">
   <title>Results mode</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="message" type="zope.schema.Text">
   <title>Message</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="gpg_key_officer" type="zope.schema.Text"
     form:validator="matem.elections.validators.GPGKeyValidator">
   <title>GPG key officer</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="gpg_key_officials" type="zope.schema.Text"
     form:validator="matem.elections.validators.GPGKeyValidator">
   <title>GPG key officials</title>
   <description></description>
   <required>True</required>
  </field>
  <field name="random_length" type="zope.schema.Int">
   <title>Random length</title>
   <default>40</default>
   <description></description>
   <required>True</required>
  </field>
  <field name="gpg_mode" type="zope.schema.Choice">
   <title>GPG mode</title>
   <default>Mandatory</default>
   <description>
      Defines if GPG is used in the whole process. Votes are encrypted
      regardless the selection.
   </description>
   <required>True</required>
   <values>
    <element>Mandatory</element>
    <element>Optional</element>
   </values>
  </field>
  <field name="load_election_data" type="zope.schema.Bool">
   <title>Load election data</title>
   <description></description>
   <required>False</required>
  </field>
  <field name="save_election_data" type="zope.schema.Bool">
   <title>Save election data</title>
   <description></description>
   <required>False</required>
  </field>
 </schema>
</model>
