<?xml version="1.0"?>
<dc-workflow xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="plone"
   workflow_id="election_workflow"
   title="Election workflow"
   description="Defines the workflow of an election."
   state_variable="review_state"
   initial_state="private"
   i18n:attributes="title; description">

 <permission>Access contents information</permission>
 <permission>Modify portal content</permission>
 <permission>View</permission>

 <state state_id="private" title="Private" i18n:attributes="title">
  <description i18n:translate="">
    Can only be seen and edited by the owner.
  </description>
  <exit-transition transition_id="submit"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>

 <state state_id="pending" title="Pending review" i18n:attributes="title">
  <description i18n:translate="">
    Waiting to be reviewed, editable only by the editor.
  </description>
  <exit-transition transition_id="show"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Editor</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Anonymous</permission-role>
  </permission-map>
 </state>

 <state state_id="draft" title="Public draft" i18n:attributes="title">
  <description i18n:translate="">
    Waiting to be reviewed, editable only by the editor.
  </description>
  <exit-transition transition_id="wait"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Editor</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Anonymous</permission-role>
  </permission-map>
 </state>

 <state state_id="waiting" title="Waiting" i18n:attributes="title">
  <description i18n:translate="">
    Waiting for the election to start.
  </description>
  <exit-transition transition_id="start"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Anonymous</permission-role>
  </permission-map>
 </state>

 <state state_id="voting" title="Voting" i18n:attributes="title">
  <description i18n:translate="">
    Election is underway.
  </description>
  <exit-transition transition_id="count"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>

 <state state_id="scrutiny" title="Scrutiny" i18n:attributes="title">
  <description i18n:translate="">
    The votes are being counted.
  </description>
  <exit-transition transition_id="publish"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>

 <state state_id="published" title="Published" i18n:attributes="title">
  <description i18n:translate="">
    Visible to everyone, not editable.
  </description>
  <exit-transition transition_id="close"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Anonymous</permission-role>
  </permission-map>
 </state>

 <state state_id="closed" title="Closed" i18n:attributes="title">
  <description i18n:translate="">
    Election is closed, no changes can be made.
  </description>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>

 <transition transition_id="submit" new_state="pending"
             title="Submit to revision"
             trigger="USER"
             before_script="" after_script=""
             i18n:attributes="title">
  <description i18n:translate=""></description>
  <action url="%(content_url)s/content_status_modify?workflow_action=submit"
          category="workflow"
          i18n:translate="">Submit to revision</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>

 <transition transition_id="show" new_state="draft"
             title="Promote to public draft"
             trigger="USER"
             before_script="" after_script=""
             i18n:attributes="title">
  <description i18n:translate=""></description>
  <action url="%(content_url)s/content_status_modify?workflow_action=show"
          category="workflow"
          i18n:translate="">Promote to public draft</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>

 <transition transition_id="wait" new_state="waiting"
             title="Wait for the election to start"
             trigger="USER"
             before_script="" after_script=""
             i18n:attributes="title">
  <description i18n:translate=""></description>
  <action url="%(content_url)s/content_status_modify?workflow_action=wait"
          category="workflow"
          i18n:translate="">Wait for the election to start</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>

 <transition transition_id="start" new_state="voting"
             title="Start voting"
             trigger="USER"
             before_script="" after_script=""
             i18n:attributes="title">
  <description i18n:translate=""></description>
  <action url="%(content_url)s/content_status_modify?workflow_action=start"
          category="workflow"
          i18n:translate="">Start voting</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>

 <transition transition_id="count" new_state="scrutiny"
             title="Compute the votes"
             trigger="USER"
             before_script="" after_script=""
             i18n:attributes="title">
  <description i18n:translate=""></description>
  <action url="%(content_url)s/content_status_modify?workflow_action=count"
          category="workflow"
          i18n:translate="">Compute the votes</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>

 <transition transition_id="publish" new_state="published"
             title="Publish election results"
             trigger="USER"
             before_script="" after_script=""
             i18n:attributes="title">
  <description i18n:translate=""></description>
  <action url="%(content_url)s/content_status_modify?workflow_action=publish"
          category="workflow"
          i18n:translate="">Publish election results</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>

 <transition transition_id="close" new_state="closed"
             title="Close election"
             trigger="USER"
             before_script="" after_script=""
             i18n:attributes="title">
  <description i18n:translate=""></description>
  <action url="%(content_url)s/content_status_modify?workflow_action=close"
          category="workflow"
          i18n:translate="">Close election</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>

 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description>Previous transition</description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description>Comment about the last transition</description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description>When the previous transition was performed</description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
